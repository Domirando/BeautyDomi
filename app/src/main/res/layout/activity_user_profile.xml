<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="#F1F1F1"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:paddingBottom="40dp"
        android:id="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#020C43"
        android:text="Profile"
        tools:ignore="MissingConstraints" />
    <TextView
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:id="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Your name: "
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/name"
        android:textSize="19dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/user"
        tools:ignore="MissingConstraints" />
    <TextView
        android:paddingBottom="10dp"
        android:id="@+id/surname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Your surname: "
        app:layout_constraintTop_toBottomOf="@id/name_title"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/surname"
        android:textSize="19dp"
        app:layout_constraintTop_toBottomOf="@id/name_title"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/surname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:paddingBottom="10dp"
        android:id="@+id/phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Your phone: "
        app:layout_constraintTop_toBottomOf="@id/surname_title"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/phone"
        android:textSize="19dp"
        android:textColor="#4E4C4C"
        app:layout_constraintStart_toEndOf="@+id/phone_title"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/surname_title"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/pincode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Your pincode: "
        app:layout_constraintTop_toBottomOf="@id/phone_title"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/pincode"
        android:textSize="19dp"
        app:layout_constraintTop_toBottomOf="@id/phone_title"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/pincode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:id="@+id/purchase_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#020C43"
        app:layout_constraintTop_toBottomOf="@id/pincode_title"
        android:text="Purchase"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/purchase_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Product: "
        app:layout_constraintTop_toBottomOf="@id/purchase_title"
        android:paddingRight="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/purchase"
        android:textSize="19dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/purchase_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/purchase_title"
        android:text=""
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/cost_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Cost: "
        app:layout_constraintTop_toBottomOf="@id/purchase_name"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/cost"
        android:textSize="19dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/purchase_name"
        android:text=""
        tools:ignore="MissingConstraints" />
    <Button
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="50dp"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>